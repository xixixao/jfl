{
  "name": "jfl",
  "version": "0.0.1",
  "description": "JavaScript Standard Functional Library",
  "main": "src/index.js",
  "author": "xixixao <xixixao@seznam.cz>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "7.10.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.1",
    "@babel/plugin-transform-flow-strip-types": "^7.10.1",
    "@babel/preset-env": "7.10.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^5.1.3",
    "flow-bin": "^0.126.1",
    "flow-remove-types": "2.126.1",
    "highlights": "^3.1.4",
    "jest": "^26.0.1",
    "jest-repl": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "rollup": "^2.18.0",
    "rollup-pluginutils": "^2.8.2"
  },
  "scripts": {
    "//preinstall": "Sets up the precommit hooks on initial npm install",
    "preinstall": "git config core.hooksPath .githooks; chmod +x .githooks/pre-commit",
    "//build": "outputs the npm package js to `dist`",
    "build": "babel src -d dist; npx prettier --write dist/*; rm dist/types.flow.js",
    "//check": "checks status of sources for TODOs and other errors",
    "check": "node_modules/.bin/jest-runtime dev/check-docs.js",
    "//docs": "builds the website into `docs`",
    "docs": "node_modules/.bin/jest-runtime dev/build-website.js",
    "//flow": "typechecks source",
    "flow": "node_modules/.bin/flow",
    "//lint": "Runs lint against all files",
    "lint": "node_modules/.bin/eslint .",
    "//serve": "serves the website for mobile development",
    "serve": "cd docs; python -m SimpleHTTPServer 8000",
    "//test": "runs all tests, pass it a name to scope down",
    "test": "node_modules/.bin/jest",
    "//watchdocs": "rebuilds the website on any changes",
    "watchdocs": "./node_modules/.bin/nodemon -e js,html --watch website-src --watch dev --watch src --exec ./node_modules/.bin/jest-runtime dev/build-website.js"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "singleQuote": true
  }
}
